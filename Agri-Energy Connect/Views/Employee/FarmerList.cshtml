@using Agri_Energy_Connect.Areas.Identity.Data
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Farmers";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success">All Farmers</h2>
        <a class="btn btn-success px-4" asp-action="AddFarmer">Add Farmer</a>
    </div>

    <table class="table table-hover shadow-sm rounded bg-white">
        <thead class="table-light">
            <tr class="fw-semibold text-uppercase text-secondary small">
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.Email</td>
                    <td>@farmer.FirstName</td>
                    <td>@farmer.LastName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

